{
    "compilerOptions": {
        "target": "ES2020",
        "module": "es6",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}